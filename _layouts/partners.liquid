---
layout: page
---

{% assign partners = site.data.partners %}
{% assign logos_per_row = page.logos_per_row | default: site.partners.logos_per_row | default: 4 %}

{% if partners and partners.size > 0 %}
  <div class="partners-grid" style="--partners-columns: {{ logos_per_row }};">
    {% for partner in partners %}
      {% assign logo_path = '/assets/img/partner_logos/' | append: partner.logo | relative_url %}
      {% if partner.url %}
        <a class="partner-card" href="{{ partner.url }}" target="_blank" rel="noopener noreferrer" aria-label="Visit {{ partner.name }} website">
          <img src="{{ logo_path }}" alt="{{ partner.name }} logo">
        </a>
      {% else %}
        <div class="partner-card">
          <img src="{{ logo_path }}" alt="{{ partner.name }} logo">
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% else %}
  <p>No partners configured yet. Add entries in <code>_data/partners.yml</code>.</p>
{% endif %}
