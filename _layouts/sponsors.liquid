---
layout: page
---

{% assign sponsors = site.data.sponsors %}
{% assign logos_per_row = page.logos_per_row | default: site.sponsors.logos_per_row | default: 4 %}

{% if sponsors and sponsors.size > 0 %}
  <div class="sponsors-grid" style="--sponsors-columns: {{ logos_per_row }};">
    {% for sponsor in sponsors %}
      {% assign logo_path = '/assets/img/sponsor_logos/' | append: sponsor.logo | relative_url %}
      {% if sponsor.url %}
        <a class="sponsor-card" href="{{ sponsor.url }}" target="_blank" rel="noopener noreferrer" aria-label="Visit {{ sponsor.name }} website">
          <img src="{{ logo_path }}" alt="{{ sponsor.name }} logo">
        </a>
      {% else %}
        <div class="sponsor-card">
          <img src="{{ logo_path }}" alt="{{ sponsor.name }} logo">
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% else %}
  <p>No sponsors configured yet. Add entries in <code>_data/sponsors.yml</code>.</p>
{% endif %}
